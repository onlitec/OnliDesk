<Window x:Class="OliAcessoRemoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OnliDesk - Acesso Remoto" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="OnliDesk" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Acesso Remoto" FontSize="12" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Connection -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="Conectar a um Computador" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <!-- Local ID Display -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Seu ID:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="LocalIdTextBlock" Text="000 000 000" FontSize="16" FontWeight="Bold" 
                                   Foreground="#3498DB" VerticalAlignment="Center"/>
                        <Button Content="ðŸ“‹" Margin="10,0,0,0" Padding="5" ToolTip="Copiar ID"/>
                    </StackPanel>
                    
                    <!-- Remote Connection -->
                    <TextBlock Text="ID do Computador Remoto:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="RemoteIdTextBox" FontSize="14" Padding="8" Margin="0,0,0,10"
                             Text="123 456 789" MaxLength="11"/>
                    
                    <TextBlock Text="Senha (opcional):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="8" Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="SaveConnectionCheckBox" Content="Salvar esta conexÃ£o" Margin="0,0,0,15"/>
                    
                    <Button x:Name="ConnectButton" Content="Conectar" FontSize="14" FontWeight="Bold"
                            Background="#3498DB" Foreground="White" Padding="15,8" 
                            Click="ConnectButton_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Right Panel - Recent Connections -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="ConexÃµes Recentes" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <ListBox x:Name="RecentConnectionsListBox" Height="300" BorderThickness="1" BorderBrush="#BDC3C7">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Id}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding LastConnection}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Content="Limpar HistÃ³rico" Margin="0,10,0,0" Padding="8,4" 
                            Background="#E74C3C" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="FooterStatusText" Text="Pronto" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="OnliTec Â© 2024" Foreground="#BDC3C7" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
